<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>About us | WiTelecom</title>
    <script src="/js/jquery.min.js"></script>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/contact.css">

    <script src="https://kit.fontawesome.com/fa53d0c90a.js" crossorigin="anonymous"></script>

    <style>
        .menu-button {
            width: 136px;
        }

        @media (max-width: 5500px) {
            .subscription-box {
                margin: 1% 0px 1% 0px;
                font-size: .8em;
            }
        }

        @media (max-width: 310px) {
            .subscription h3 {
                padding: 0px 0% 1% 0px;
                margin: 4% 0px 7% 7%;
                font-size: 7px;
            }

            .subscription-box {
                margin: 1% 0px 1% 0px;
                font-size: .5em;
            }
        }
    </style>
</head>

<body>
    <%- include("../partials/en_navbar.ejs") %>
        <div class="default-container">
            <div class="top-separator"></div>
            <h1 class="contact-tittle">CONTACT US</h1>
        </div>
        <section class="form-section col-md-12 col-lg-12 col-sm-12 col-xs-12">
            <div class="form">
                <form action="/contact/en" method="post">
                    <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12 tittle">
                        <h2>Ready to Grow your Business?</h2>
                        <span>Get in touch with us!</span>
                    </div>

                    <div class="col-md-6 col-lg-6 col-sm-6 col-xs-12 first">
                        <label>First Name </label>
                        <input required type="text" name="firstName" placeholder="First Name">

                        <label>Business Name </label>
                        <input type="text" required name="business" placeholder="Business Name">

                        <label>E-mail </label>
                        <input type="email" required name="email" placeholder="E-mail">

                        <label>What services do you offer? </label>
                        <input type="text" name="services" placeholder="What services do you offer?">
                    </div>

                    <div class="col-md-6 col-lg-6 col-sm-6 col-xs-12 second">
                        <label>Last Name</label>
                        <input type="text" required name="lastName" placeholder="Last Name">

                        <label>Job Tittle </label>
                        <input type="text" required name="job" placeholder="Job Tittle">

                        <label>Contact No. </label>
                        <input type="text" required name="contact" placeholder="Contact No.">
                    </div>

                    <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12 text-section">
                        <label>How can we help you?</label>
                        <textarea rows="10" required name="content" cols="22"></textarea>
                        <button class="btn btn-primary btn-lg btn-block submit"
                            style="    background-color: #561970;">SUBMIT</button>
                    </div>
                </form>
            </div>


        </section>




        <section class="col-md-12 work-section no-padding">

            <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12 subscription-line">
            </div>
            <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12 subscription-section no-padding">
                <div class="col-md-6 col-lg-6 col-sm-6 col-xs-6 subscription">
                    <h3>SUBSCRIBE TO WI TELECOMMUNICATIONS NEWSLETTER:</h3>
                </div>

                <div class="col-md-6 col-lg-6 col-sm-6 col-xs-6 subscription no-padding">
                    <input type="text" class="subscription-box" placeholder="PUT YOUR EMAIL HERE">
                </div>
            </div>
        </section>
        <%- include("../partials/en_footer.ejs") %>
        <% if(success){ %>
            <script type="text/javascript">
                alert('Email sent successfully.')
            </script>
            <%}%>

                <% if(error){ %>
                    <script type="text/javascript">
                        alert('There was an error sending the email, again')
                    </script>
                    <%}%>
</body>
</html>